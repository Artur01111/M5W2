<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.result.ResultFragment">

    <ImageView
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/result_devchonka"
        android:layout_width="match_parent"
        android:layout_height="300dp"/>

    <TextView
        tools:text="You"
        android:layout_marginTop="303dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textStyle="normal"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginTop="320dp"
        android:text="❤"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:textStyle="normal"
        android:textColor="@color/black"
        tools:text="Me"
        android:layout_marginTop="338dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="#ED6A6A"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="360dp"
        android:text="Your Score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="464dp"
        tools:text="100%"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:layout_marginTop="390dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/heart2"
        android:scaleType="centerCrop"
        android:layout_width="150dp"
        android:layout_height="150dp"/>

    <Button
        android:id="@+id/calculate_again"
        android:backgroundTint="#4C00FF"
        android:text="Try Again"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="550dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:textSize="13sp"
        android:layout_marginTop="36dp"
        app:layout_constraintEnd_toEndOf="@id/btn_home"
        app:layout_constraintStart_toStartOf="@id/btn_home"
        app:layout_constraintTop_toTopOf="@id/btn_home"
        android:text="Home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:text="History"
        android:textSize="13sp"
        android:layout_marginTop="36dp"
        app:layout_constraintEnd_toEndOf="@id/btn_history"
        app:layout_constraintStart_toStartOf="@id/btn_history"
        app:layout_constraintTop_toTopOf="@id/btn_history"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toEndOf="@id/btn_home"
        app:layout_constraintTop_toTopOf="@id/btn_home"
        app:layout_constraintStart_toStartOf="@id/btn_home"
        android:src="@drawable/heart"
        android:layout_width="36dp"
        android:layout_height="36dp"/>

    <ImageView
        app:layout_constraintTop_toTopOf="@id/btn_history"
        app:layout_constraintStart_toStartOf="@id/btn_history"
        app:layout_constraintEnd_toEndOf="@id/btn_history"
        android:src="@drawable/history"
        android:layout_marginTop="4dp"
        android:layout_width="36dp"
        android:layout_height="36dp"/>

    <Button
        android:id="@+id/btn_home"
        android:backgroundTint="#00000000"
        android:layout_margin="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="60dp"
        android:layout_height="60dp"/>

    <Button
        android:id="@+id/btn_history"
        android:backgroundTint="#00000000"
        android:layout_margin="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="60dp"
        android:layout_height="60dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>